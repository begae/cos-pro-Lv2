
func solution(day: Int, numbers: Array<Int>) -> Int {
    var count: Int = 0
    for i in 0...numbers.count-1 {
        if day % 2 == 1 && numbers[i] % 2 == 1 {
            count += 1
        } else if day % 2 == 0 && numbers[i] % 2 == 0 {
            count += 1
        }
    }
    return count
}

solution(day: 17, numbers: [3285, 1724, 4438, 2988, 3131, 2998]) // 2

